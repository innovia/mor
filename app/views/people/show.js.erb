<style type="text/css" media="screen">
	.bio {
		border:1px solid white;
		height:250px;
		overflow:auto;
		padding: 20px 10px 0px 10px;
		position: relative;
		width: 370px;
		font-size: 16px;
		line-height: 1.5em;
	}
	.image_bio {
		float: left;
		padding: 0px 30px 10px 20px;
	}
</style>
	<div class="close"></div>
		<h3 align="left" class="left"><%= @person.full_name%></h3>
			<% if admin? %>
			<%= link_to image_tag("icons/user_edit.png") + "Edit Person", edit_person_path(@person), :class => "right" %>
			<% end -%>
				<div class="bio" align="left">
				<%= image_tag(@person.photo.url(:thumb), :class => 'image_bio')%>
				<%= @person.notes %>
				</div>
	
	<script type="text/javascript">
	$('.close').bind('click', function(event) {
		monqi_api.close();
	});
	
	</script>