<h2><%= @page.title.capitalize.humanize %> Pictures</h2>
<table>
  <tr>
		<th>Preview </th>
    <th>Photo File Name</th>
    <th>Photo Content Type</th>
    <th>Photo File Size</th>
    <th>Photo Updated At</th>
		<th class="show"></th>
		<%# if admin? %>
		<th class="edit"></th>
		<th class="delete"></th>
		<%# end %>

  </tr>
  <% for picture in @pictures %>
    <tr>
      <td><%= image_tag(picture.photo.url(:thumb)) %></td>
      <td><%=h picture.photo_file_name %></td>
      <td><%=h picture.photo_content_type %></td>
      <td><%=h picture.photo_file_size %></td>
      <td><%=h picture.photo_updated_at %></td>
      <td><%= link_to "Show", picture %></td>
      <td><%= link_to "Edit", edit_page_picture_path(params[:page_id], picture) %></td>
      <td><%= link_to "Destroy", picture, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Upload New Picture", new_page_picture_path(params[:page_id]) %></p>
