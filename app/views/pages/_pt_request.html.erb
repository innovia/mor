		<%= text_field_tag(:trainer_preference) %>
		<br/>
		<strong>how many times a week:</strong> <%= text_field_tag(:times_a_week, {}, :size => "2", :maxlength => "2") %> <br/><br/>
	<strong>	preferred days:<span class="req">*</span></strong>
		<%= check_box_tag('preferred_days[]','Mon', :class => "days") -%> Mon
