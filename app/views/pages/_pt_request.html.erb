	 	<%= check_box_tag('preferred_days[]','Fri', :class => "days") -%> Fri
	 	<%= check_box_tag('preferred_days[]','Sat', :class => "days") -%> Sat
		<%= check_box_tag('preferred_days[]','Sun', :class => "days") -%> Sun
		
		<br/>	<br/>
		<strong>How long would you like the session:<span class="req">*</span></strong> 	
		<%= check_box_tag('session_duration[]','45 min') -%> 45 Minutes
		<%= check_box_tag('session_duration[]','1 hour') -%> 1 Hour
		</p>
</div><!-- /page -->

