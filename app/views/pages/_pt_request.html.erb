<div id="pg2" class="page step">
<h3>Personal Training Request</h3>
<strong>First name:<span class="req">*</span></strong><%= text_field_tag(:first_name) %>
<strong>Last name:<span class="req">*</span></strong><%= text_field_tag(:last_name) %>
<p>
		<label class="form male">
			Gender:
	    <input type="radio" id="gender_male" name="gender" value="male" />
	    Male
		</label>
		<label class="form female">
	    <input type="radio" id="gender_female" name="gender" value="female" />
	    Female
		</label>
		<br/>
<strong>Age:</strong> <%= text_field_tag(:age, {}, :size => "2", :maxlength => "2") %>
<strong>Height:</strong> <%= text_field_tag(:feet, {}, :size => "1", :maxlength => "1") %> feet <%= text_field_tag(:inch, {}, :size => "2", :maxlength => "2") %> inch
<strong>Weight</strong> <%= text_field_tag(:weight, {}, :size => "3", :maxlength => "3") %> lbs
</p>

<p>
<strong>Telephone #:</strong><br/>
							 <strong>Home:</strong> <%= text_field_tag(:home_phone, {}, :size => "12",  :class => "phone fillone") %>
							 <strong>Work:</strong> <%= text_field_tag(:work_phone, {}, :size => "12", :class => "phone fillone") %>
							 <strong>Mobile:<span class="req">*</span></strong> <%= text_field_tag(:cell_phone, {}, :size => "12", :class => "phone fillone") %><br/>
  				    <strong> e-mail:<span class="req">*</span></strong> <%= text_field_tag(:email) %>
</p>
<p>
	<strong>Medical conditions, medications, allergies:</strong><span class="req">*</span><br/>
	<%= text_area_tag(:conditions, "list any medical problems or medications.", :rows => 3, :id => "conditions") %>
</p>
</div> <!-- /page -->

