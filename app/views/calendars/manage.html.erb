<div class="body">
<h3>Manage Calendars and Package types </h3>
<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
	<th></th>
	<th></th>
  </tr>
  <%- @calendars.each do |calendar|%>
  <tr class=<%= cycle('odd', 'even')%> >
      <td><%=h calendar.name %></td>

      <td align="center"><div id="calendar_color" style="background-color: <%= calendar.color %>;"></div> </td>
      <td align="center"><%=link_to 'Edit', edit_object_url(calendar) %></td>
      <td align="center"><%=link_to 'Destroy', object_url(calendar), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>
<%= button_to 'New Calendar', new_object_url %>
</div>