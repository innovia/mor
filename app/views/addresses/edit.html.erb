<h2>Edit Address for <%= @person.full_name.capitalize %></h2>

<%= error_messages_for :address %>

<% form_for :address, :url => {:action => "update"},:html => { :method => :put }  do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>
<br/>
<%= link_to :back %>