<div class="body">
	<ul id="pkg_types_ul">
		<% @package_types.each do |pkg| %>
		<li><%= link_to pkg.name, '#', :class => 'pkg_type_selector', "data-pkg_type" => pkg.name.to_s %></li>
		<% end -%>
	</ul>
	
	<div id="pt_table">
	<%#= render :partial => "package_templates_table", :locals => {:package_templates => @package_templates} %>
  </div>
<h2 id="title">Package Title</h2>
	<table id="sortable">
	  <tr>
	    <th>Description</th>
	    <th>Cost</th>
			<th>Sessions</th>
	    <th>Expires in</th>
			<th class="edit"></th>
			<th class="delete"></th>
	  </tr>
		<tbody class="content"></tbody>
	</table>

</div>
<%= button_to 'New Package Template', new_object_url %>

<script type="text/javascript">	
$("#sortable tbody.content").sortable({
 	dropOnEmpty: false, 
	axis: 'y',
	cursor: 'crosshair',
	opacity: 0.4,
	items: 'tr',

	update: function() {
		  $.post('<%= sort_package_templates_path %>', $(this).sortable('serialize'));
	}
});
$("#sortable tbody.content").disableSelection();
fetch_packages('Group Classes');
</script>

