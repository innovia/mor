<div class="notification">
	<h3>We found you in our database, you may now create your user account.</h3>
</div>

<%= error_messages_for :user %>

	<% form_for :user, :url => users_path do |f| -%>
			e-mail: <%=h @member_exists.email %>
			<%= f.hidden_field :email, :value => @member_exists.email%>
			<%= hidden_field_tag :existing_member, {}, :value => @member_exists.id %>
			<%= render :partial => 'user_signup_fields', :locals => {:f => f} %>
			<%= f.submit "Submit" %>
<%-end-%>