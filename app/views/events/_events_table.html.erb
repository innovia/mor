<% @days.each do |day| %>
<% unless @events.nil? or @events.empty? %>
	<tr>
		<th>
			<span class="headerText"><%= @events.first.start_date.strftime('%a') %></span>
			<span class="smallText"> <%= @events.first.start_date.strftime(' %B %d, %Y') %></span></th>
		<th class="smallHeader" align="center">CLASSES</th>
		<th class="smallHeader">INSTRUCTOR</th>
	</tr>
	<%- @events.each do |event| %>
		<%# for every day %>
		<% content_tag_for(:tr, event, :class => cycle("even", "odd")) do %>
	     <td width="20%"><%= event.start_date.strftime('%I:%M') %> - <%=h event.end_date.strftime('%I:%M %p') %></td>
			 <td><%= link_to event.monqi_class.title, '#', :class => 'class_desc' %></td>
			 <td><%= link_to event.instructor.full_name, '#', :class => 'instructor_info' %></td>
	 <% end %>
	<% end %>	
<% end %>
<% end -%> <%# end of day %>
